{
	"manifest_version": 3,
	"name": "Market Papa",
	"version": "1.2.2",

	"action": {
		"default_icon": "16.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://www.wildberries.ru/*"],
			"run_at": "document_idle",
			"css": [
				"styles.css",
				"js/switch/styles.css"
			],
			"js": [
				"jquery-3.6.0.min.js",
				"apexchart/apexcharts.min.js",

				"js/utils.js",
				"js/switch/index.js",
				"js/sizeModal/columns.js",
				"js/sizeModal/table.js",

				"marketpapa.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [ "/images/*" ],
			"matches": [ "https://www.wildberries.ru/*" ]
		},
		{
			"resources": [ "/fonts/montserrat/*" ],
			"matches": [ "https://www.wildberries.ru/*" ]
		}
	],
	"description": "Market Papa - точный и удобный сервис аналитики wildberries",
	"icons": {
		"16": "16.png",
		"32": "32.png",
		"48": "48.png",
		"128": "128.png"
	},
	"host_permissions": [
		"https://www.wildberries.ru/*",
		"*://*/"
	],
	"permissions": [
		"cookies"
	]
}